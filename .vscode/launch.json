  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:5173/",
      "webRoot": "${workspaceFolder}/packages/fe/"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "debugger nest",
      "runtimeExecutable": "pnpm",
      "args": ["be:debug"],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal"
    },
  ]
}